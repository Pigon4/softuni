@model InspectUserViewModel

@inject IImageConverter _imageConverter

@{
    ViewBag.Title = "Inspect";
}
<body>
    <div class="container" id="box">
        <h2 style="color: white">@Model.Username - @Model.Points</h2>
        <hr>
        <div id="row">
            
            @if (Model.Team.FirstOrDefault(x => x.Position == "top") != null)
            {
                <div id="image-text-container">
                    <img id="team-image" src="@_imageConverter.ConvertToImage(Model.Team.First(x => x.Position == "top").Image)">
                    <div id="team-player-ingamename">@Model.Team.First(x => x.Position == "top").Nickname</div>
                </div>
            }
            else
            {
                <button id="Add-Player-Button">?</button>
            }

            @if (Model.Team.FirstOrDefault(x => x.Position == "jng") != null)
            {
                <div id="image-text-container">
                    <img id="team-image" src="@_imageConverter.ConvertToImage(Model.Team.First(x => x.Position == "jng").Image)">
