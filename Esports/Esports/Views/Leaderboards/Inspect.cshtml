                    <div id="team-player-ingamename">@Model.Team.First(x => x.Position == "mid").Nickname</div>
                </div>
            }
            else
            {
                <button id="Add-Player-Button">?</button>
            }

            @if (Model.Team.FirstOrDefault(x => x.Position == "adc") != null)
            {
                <div id="image-text-container">
                    <img id="team-image" src="@_imageConverter.ConvertToImage(Model.Team.First(x => x.Position == "jng").Image)">
                    <div id="team-player-ingamename">@Model.Team.First(x => x.Position == "adc").Nickname</div>
                </div>
            }
            else
            {
                <button id="Add-Player-Button">?</button>
            }

            @if (Model.Team.FirstOrDefault(x => x.Position == "sup") != null)
            {
                <div id="image-text-container">
                    <img id="team-image" src="@_imageConverter.ConvertToImage(Model.Team.First(x => x.Position == "sup").Image)">
                    <div id="team-player-ingamename">@Model.Team.First(x => x.Position == "sup").Nickname</div>
                </div>
            }
            else
            {
                <button id="Add-Player-Button">?</button>

            }

        </div>
    </div>
</body>