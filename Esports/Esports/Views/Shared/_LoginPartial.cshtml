@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul>
@if (SignInManager.IsSignedIn(User))
{
        <li style="display: inline;">
            <a id="header-item-font" style="padding-right: 10px;" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
        <li style="display: inline;">
        <form  style="display: inline; padding-right: 10px;"  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" id="header-item-font" >Logout</button>
        </form>
    </li>
}
else
{
        <li style="display: inline;">
            <a id="header-item-font" style="padding-right: 10px;" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
        <li style="display: inline;">
            <a id="header-item-font" style="padding-right: 10px;" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
